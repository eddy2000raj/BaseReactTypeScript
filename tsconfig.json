{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["app/config/*"],
      "@components/*": ["app/components/*"],
      "@layouts/*": ["app/layouts/*"],
      "@routes/*": ["app/routes/*"],
      "@services/*": ["app/services/*"],
      "@pages/*": ["app/pages/*"]
    }
  },
  "include": [
    "src"
  ]
}
